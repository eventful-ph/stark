{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "baseUrl": ".",
    "paths": {
      "stark-types": ["types/index.d.ts"]
    },

    "noEmit": false,
    "outDir": "./dist-typescript",
    "declaration": true,
    "declarationDir": "./dist-typescript",
    "esModuleInterop": true,
    "jsx": "react",

    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false
  },
  "include": [
    "types/index.d.ts",
    "src",
    "src/*.ts",
    "src/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": ["./node_modules/", "./dist/", "./stories/"]
}
